<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:visibility="visible"
    android:id="@+id/mainLayout">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:contentDescription="@string/icon"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:src="@drawable/logo_red"
        android:id="@+id/logoRating"/>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/field1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="2dp"
            android:fontFamily="sans-serif"
            android:text="@string/phone_number"
            android:textColor="#940102"
            android:textSize="15sp"
            android:layout_marginStart="5dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/field2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="sans-serif"
                android:text="@string/ratingAssegnato"
                android:textColor="#7a7a7a"
                android:textSize="15sp"
                android:layout_marginStart="5dp" />

            <RatingBar
                android:id="@+id/ratingBarAssegnato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                style="@android:style/Widget.DeviceDefault.RatingBar.Small"
                 />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/field3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="sans-serif"
                android:text="@string/ratingMedio"
                android:textColor="#7a7a7a"
                android:textSize="15sp"
                android:layout_marginStart="5dp" />

            <RatingBar
                android:id="@+id/ratingBarMedio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                style="@android:style/Widget.DeviceDefault.RatingBar.Small"
                />

        </LinearLayout>
    </LinearLayout>




